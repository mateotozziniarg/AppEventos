@{ ViewData["Title"] = "Mi Perfil";
    }
<h1>@ViewData["Title"]</h1>


<div class="main-layout">
    <div class="card">
        <div class="card-header">
            <h3>Datos de usuario</h3>
        </div>
        <div class="container">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>Usuario</label>
                    <input readonly value="@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Username" type="text" class="form-control" name='Username'>
                </div>
                <div class="form-group col-md-3">
                    <label>Email</label>
                    <input readonly value="@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Email" type="text" class="form-control" name='Email'>
                </div>
                <div class="form-group col-md-3">
                    <label>Nombre</label>
                    <input readonly value="@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Nombre" type="text" class="form-control" name='Nombre'>
                </div>
                <div class="form-group col-md-3">
                    <label>Apellido</label>
                    <input  value="@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Apellido" type="text" class="form-control" name='Apellido' readonly>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="form-row">
                <div class="form-group col-md-12" @{if (!@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Vendedor) { <text> style='display:none;' </text>  } }>
                    <label>Descripción</label>
                    <textarea readonly class="form-control" aria-label="With textarea" style="max-width:100%;" value="" name="Descripcion">@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Descripcion</textarea>
                </div>
            </div>
        </div>
            <div class="card-body">
                <a href="~/Usuario/EditarPerfil"><button class="btn btn-primary">Editar datos de perfil</button> </a>
                <a href="~/Home/Index" class="btn btn-primary">Volver</a>
            </div>
        </div>
    </div>

<style>
    label {
        color: darkslategray;
        font-weight: bold;
        
    }

    h1 {
        color: darkslategray;
        font-weight: bold;
    }

    h3 {
        color: darkslategray;
        font-weight: bold;
    }

    div.container {
        padding-top: 15px;
    }

    input.form-control:read-only {
        background-color: white;
    }

    textarea.form-control:read-only {
        background-color: white;
    }

    textarea {
        resize: none;
    }
</style>
