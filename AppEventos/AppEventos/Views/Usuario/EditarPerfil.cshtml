@{ ViewData["Title"] = "Mi Perfil";
}
<h1>@ViewData["Title"]</h1>
<div class="main-layout">
    <div class="card">
        <div class="card-header">
            <h3><strong>Editar datos de usuario</strong></h3>
            <a href="~/Usuario/CambiarPass"><button class="btn btn-info" style="float:right"> Deseo cambiar mi contraseña</button></a>
        </div>
        <div class="card-body">
            <div class="alert alert-success" role="alert" @{if (@ViewBag.Success == null) { <text> style="display:none" </text>  } }>
                @ViewBag.Success
            </div>
            <div class="alert alert-danger" role="alert" @{if (@ViewBag.Error == null) { <text> style="display:none" </text>  } }>
                @ViewBag.Error
            </div>
            <form method="POST" form action="EditarPerfil" id="formEditarPerfil" enctype="multipart/form-data">
                <div class="form-row">

                    <div class="form-group col-12">
                        <label class="lblForm">Username</label>
                        <input disabled value="@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Username" type="text" class="form-control inputForm" name='Username'>
                    </div>
                    <div class="form-group col-12">
                        <label class="lblForm">Email</label>
                        <input disabled value="@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Email" type="text" class="form-control inputForm" name='Email'>
                    </div>
                    <div class="form-group col-12">
                        <label class="lblForm">Nombre</label>
                        <input required value="@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Nombre" type="text" class="form-control inputForm" name='Nombre'>
                    </div>
                    <div class="form-group col-12">
                        <label class="lblForm">Apellido</label>
                        <input required value="@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Apellido" type="text" class="form-control inputForm" name='Apellido'>
                    </div>
                </div>
                <div class="form-row">
                </div>
                <div class="form-group" @{if (!@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Vendedor) { <text> style='display:none;' </text>  } }>
                    <label class="lblForm">Descripcion</label>
                    <textarea class="form-control inputForm" aria-label="With textarea" style="max-width:80%;vertical-align:top;height: 150px;" value="" name="Descripcion">@AppEventos.Controllers.SessionHelper.UsuarioLogueado.Descripcion</textarea>
                </div>
                <div class="form-group">
                    <label for="Imagen">Imagen de Perfil</label>
                    <input type="file" class="form-control-file" id="Imagen" name="Imagen">
                </div>

                <div class="form-group row">
                    <div class="col 12 col-md-6 col-lg-10">
                        <a href="~/Usuario/Perfil"><button type="button" class="btn btn-secondary">Salir</button></a>
                    </div>
                    <div class="col-12 col-md-6 col-lg-2">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
            </form>
        </div>
    </div>
</div>

<style>
    .inputForm {
        display: inline;
    }

    .lblForm {
        width: 100px;
        text-align: center;
    }
</style>
